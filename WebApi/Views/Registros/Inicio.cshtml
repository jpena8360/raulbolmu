            </button>*@
        <!--</form>-->
    </div><br>
   
        <table class="table" style="text-align:left;">
            <tr class="btn-primary">

                <th scope="col">Pais</th>
                <th scope="col">Nombre</th>
                @*<th scope="col">PaisID</th>*@
                @*<th scope="col">UsuarioID</th>*@
                <th scope="col">Tipo</th>
                <th scope="col">Arranque</th>
                <th scope="col">Envion</th>
                <th scope="col">TotalPeso</th>
                <th scope="col">Intentos</th>
       
            </tr>
            @foreach (var objProducto in Model)
            {
<tr>
    <td>@objProducto.PaisNombre</td>
    <td>@objProducto.Nombre</td>
    @*<td>@objProducto.PaisID</td>*@
    @*<td>@objProducto.UsuarioID</td>*@
    <td>@objProducto.Tipo</td>
    <td>@objProducto.Arranque</td>
    <td>@objProducto.Envion</td>
    <td>@objProducto.TotalPeso</td>
    <td>@objProducto.NumIntentos</td>
    <td hidden>@objProducto.PaisID</td>
    <td><a class="btn btn-danger" href="~/Registros/Acualizar/@objProducto.PaisID">Intentar</a></td>
</tr>}

        </table>
    </div>



    <script src="~/Scripts/Registro.js"></script>

