@model List<model.entity.Productos>
@{ ViewBag.Title = "Inicio"; }
<br />
<br />
<br />
<div class="container-fluid">
    <div>
        <a class="btn btn-primary" href="~/Productos/Create">Registrar Envio</a>

        <form action="/Productos/Buscar" method="post">
            <br />
            <input type="text" class="form-control" name="id" placeholder="Buscar Producto" required autofocus>
            <br />
            <button class="btn btn-primary" type="submit">
                Buscar
            </button>
        </form>
    </div><br>

    <table class="table" style="text-align:left;">
        <tr class="btn-primary">

            <th scope="col">Codigo_Transporte</th>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Telefono</th>
            <th scope="col">Tipo_Producto</th>
            <th scope="col">Cantidad_Producto</th>
            <th scope="col">Fecha_registro</th>
            <th scope="col">Medio_Entrega</th>
            <th scope="col">Bodega_Entrega</th>
            <th scope="col">Puerto_Entrega</th>
            <th scope="col">Precio_envio</th>
            <th scope="col">Medio_Transporte</th>
            <th scope="col">Placa_vehículo</th>
            <th scope="col">Numero_guía</th>
            <th scope="col">Numero_Flota</th>
        </tr>
        @foreach (var objProducto in Model)
        {
<tr>
    <td>@objProducto.Id_Envio</td>
    <td>@objProducto.Nombre</td>
    <td>@objProducto.Direccion</td>
    <td>@objProducto.Telefono</td>
    <td>@objProducto.Tipo_producto</td>
    <td>@objProducto.Cantidad_Producto</td>
    <td>@objProducto.Fecha_registro</td>
    <td>@objProducto.Medio_Entrega</td>
    <td>@objProducto.Bodega_Entrega</td>
    <td>@objProducto.Puerto_Entrega</td>
    <td>@objProducto.Precio_envio</td>
    <td>@objProducto.Medio_Transporte</td>
    <td>@objProducto.Placa_vehículo</td>
    <td>@objProducto.Numero_guía</td>
    <td>@objProducto.Numero_Flota</td>
    <td><a class="btn btn-danger" href="~/Productos/Acualizar/@objProducto.Id_Envio">Editar</a></td>
    <td><a class="btn btn-danger" href="~/Productos/delete/@objProducto.Id_Envio">Eliminar</a></td>
</tr>}

    </table>
</div>



<script src="~/Scripts/Producto.js"></script>

<style>
    table {
        width: 100%;
        text-align: left;
        border-collapse: collapse;
        margin: 0 0 1em 0;
        caption-side: top;
    }

    caption, td, th {
        padding: 0.3em;
    }

    th, td {
        border-bottom: 1px solid #000;
        border-right: 1px solid #000;
    }

        th.last, td.last {
            border-right: 0;
        }

    tfoot th, tfoot td {
        border-bottom: 0;
        text-align: center;
    }

    th {
        width: 25%;
    }
</style>